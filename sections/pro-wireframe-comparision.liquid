<div class="gradientColor">
  <div class="driedPulp">
    <div class="container">
      <div class="containerRow">
        <div class="colleftDried">
          <h2>
            {{ section.settings.heading }}
          </h2>
          <p>{{ section.settings.info }}</p>
          {% if section.settings.button_text != blank %}
            <a href="{{ section.settings.button_url | default: '#' }}">
              {{ section.settings.button_text }}
            </a>
          {% endif %}
        </div>
        {% render 'responsive-image', image: section.settings.image %}
      </div>
    </div>
  </div>
  <div class="priceComparison">
    <div class="container">
      <div class="priceComparisonContent">
        <h2>{{ section.settings.heading_comparison }}</h2>
        <h4>{{ section.settings.subheading }}</h4>

        <div class="priceComparisonItems">
          {% for block in section.blocks %}
            <div class="priceComparisonItem">
              {% render 'responsive-image', image: block.settings.image %}
              <h4>
                {{ block.settings.text }}
              </h4>
              {% if block.settings.difference != blank %}
                <div class="salePriceBadge">
                  <span>
                    {{ block.settings.difference }}</span>
                </div>
              {% endif %}
            </div>
          {% endfor %}
        </div>
      </div>
    </div>
  </div>
</div>

{% schema %}
  {
    "name": "Price Comparison",
    "settings": [
      {
        "type": "header",
        "content": "Ingredient"
      },
      {
        "type": "text",
        "id": "heading",
        "label": "Heading"
      },
      {
        "type": "inline_richtext",
        "id": "info",
        "label": "Description"
      },
      {
        "type": "text",
        "id": "button_text",
        "label": "Button Text"
      }, {
        "type": "url",
        "id": "button_url",
        "label": "Button URL"
      }, {
        "type": "image_picker",
        "id": "image",
        "label": "Image"
      }, {
        "type": "header",
        "content": "Price Comparison"
      }, {
        "type": "text",
        "id": "heading_comparison",
        "label": "Heading"
      }, {
        "type": "text",
        "id": "subheading",
        "label": "Subheading"
      }
    ],
    "blocks": [
      {
        "name": "Block",
        "type": "block",
        "limit": 3,
        "settings": [
          {
            "type": "text",
            "id": "text",
            "label": "Text"
          }, {
            "type": "text",
            "id": "difference",
            "label": "Difference Percentage"
          }, {
            "type": "image_picker",
            "id": "image",
            "label": "Image"
          }
        ]
      }
    ]
  }
{% endschema %}