<div class="banenrWrapper1" loading="lazy" style="background-image: url('{{ blog.metafields.custom.background_image | image_url: width: blog.metafields.custom.background_image.width }}');">
<div class="container">
    <div class="inner-recp">
        <h2> {{ blog.metafields.custom.heading }} </h2>
        <p> {{ blog.metafields.custom.text }} </p>
    </div>
    <div class="recp-flex">
        <div class="recp-width">
            <img src="images/Strawberry Milk.png">
            <h3>Strawberry Cashew Milk</h3>
            <p>Fill up the Milky Plant water tank with clean water</p>
            <a href="#">read recipe</a>
        </div>
        <div class="recp-width">
            <img src="images/Vegan.png">
            <h3>Strawberry Cashew Milk</h3>
            <p>Fill up the Milky Plant water tank with clean water</p>
            <a href="#">read recipe</a>
        </div>
    </div>
</div>
</div>

{% schema %}
    {
        "name": "Blog Banner",
        "settings": [
            {
                "type": "text",
                "id": "heading",
                "label": "Heading"
            },
            {
                "type": "richtext",
                "id": "text",
                "label": "Text"
            },
            {
                "type": "image_picker",
                "id": "background_image",
                "label": "Background Image"
            }
        ]   
    }
{% endschema %}