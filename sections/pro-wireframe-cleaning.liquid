<div class="selfCleaning">
  <div class="container">
    <div class="selfCleaningContent">
      {% render 'responsive-image', image: section.settings.image %}
      <div class="contentWrapperSelfCleaning">
        <h2>
          {{ section.settings.heading }}
        </h2>
        <p>{{ section.settings.info }}</p>
        {% if section.settings.button_text != blank %}
          <a href="{{ section.settings.button_url | default: '#' }}">
            {{ section.settings.button_text }}
          </a>
        {% endif %}
      </div>
    </div>
  </div>
</div>

{% schema %}
  {
    "name": "Cleaning",
    "settings": [
      {
        "type": "text",
        "id": "heading",
        "label": "Heading"
      },
      {
        "type": "inline_richtext",
        "id": "info",
        "label": "Description"
      },
      {
        "type": "text",
        "id": "button_text",
        "label": "Button Text"
      },
      {
        "type": "url",
        "id": "button_url",
        "label": "Button URL"
      }, {
        "type": "image_picker",
        "id": "image",
        "label": "Image"
      }
    ]
  }
{% endschema %}