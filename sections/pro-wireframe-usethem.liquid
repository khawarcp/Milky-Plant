<div class="usThem">
    <div class="container">
        <div class="usThemContent">
            <h2> {{ section.settings.heading }} </h2>
            <div class="usThemContentItems">
                {% for block in section.blocks %}                    
                    <div class="usThemContentItem">
                        {% render 'responsive-image', image: block.settings.image %}
                        <p> {{ block.settings.heading }} </p>
                    </div>
                {% endfor %}
            </div>
        </div>
    </div>
    <div class="custom-shape-divider-bottom-1675884159">
        <svg data-name="Layer 1" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 1200 120" preserveAspectRatio="none">
            <path d="M985.66,92.83C906.67,72,823.78,31,743.84,14.19c-82.26-17.34-168.06-16.33-250.45.39-57.84,11.73-114,31.07-172,41.86A600.21,600.21,0,0,1,0,27.35V120H1200V95.8C1132.19,118.92,1055.71,111.31,985.66,92.83Z" class="shape-fill"></path>
        </svg>
    </div>
</div>


<div class="bottomImg">
    {% render 'responsive-image', image: section.settings.image %}
</div>

{% schema %}
    {
        "name": "Us Vs Them",
        "settings":[
            {
                "type": "text",
                "id": "heading",
                "label": "Heading"
            },
            {
                "type": "image_picker",
                "id": "image",
                "label": "Image"
            }
        ],
        "blocks": [
            {
                "name": "Block",
                "type": "block",
                "settings":[
                    {
                        "type": "text",
                        "id": "text",
                        "label": "Text"
                    },
                    {
                        "type": "image_picker",
                        "id": "image",
                        "label": "Image"
                    }
                ]
            }
        ]   
    }
{% endschema %}