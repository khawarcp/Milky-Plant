<div class="impact" style="background-image: url('{{ section.settings.background_image | image_url : width : section.settings.background_image.width }}');">
  <div class="container">
    {% render 'responsive-image', image: section.settings.image_1 %}
    <h2>
      {{ section.settings.heading }}
    </h2>
    <div class="paraWrapper">
      {% render 'responsive-image', image: section.settings.image_2 %}
      <div class="parWrapper">
        {{ section.settings.info }}
      </div>
    </div>
  </div>
</div>

{% schema %}
  {
    "name": "Impact",
    "settings": [
      {
        "type": "text",
        "id": "heading",
        "label": "Heading",
        "default": "Our Impact"
      },
      {
        "type": "textarea",
        "id": "info",
        "label": "Text"
      },
      {
        "type": "image_picker",
        "id": "image_1",
        "label": "Image 1"
      },
      {
        "type": "image_picker",
        "id": "image_2",
        "label": "Image 2"
      }, {
        "type": "image_picker",
        "id": "background_image",
        "label": "Background Image"
      }
    ],
    "presets": [
      {
        "name": "Impact"
      }
    ]
  }
{% endschema %}